ARG variant
FROM simplicite/server:centos${variant}-jre

ARG date
ARG jvm=latest

LABEL org.label-schema.name="simplicite-server-centos7-openjdk-${jvm}" \
      org.label-schema.vendor="Simplicite Software" \
      org.label-schema.build-date="${date}" \
      org.opencontainers.image.ref.name="simplicite-server-centos7-openjdk-${jvm}" \
      org.opencontainers.image.title="Simplicite server / CentOS 7 / OpenJDK ${jvm}" \
      org.opencontainers.image.description="Simplicite server / CentOS 7 / OpenJDK ${jvm}" \
      org.opencontainers.image.vendor="Simplicite Software" \
      org.opencontainers.image.created="${date}"

RUN dnf install -y java-${jvm}-openjdk-devel && dnf clean all
ENV JAVA_HOME=/usr/lib/jvm/java

EXPOSE 8000
