ARG reg=registry.simplicite.io
FROM ${reg}/server:almalinux8-base

ARG date
ARG jvm=latest

LABEL org.label-schema.name="simplicite-server-almalinux8-${jvm}" \
      org.label-schema.vendor="Simplicite Software" \
      org.label-schema.license="NONE" \
      org.label-schema.build-date="${date}" \
      org.opencontainers.image.ref.name="simplicite-server-almalinux8-${jvm}" \
      org.opencontainers.image.title="Simplicite server / Almalinux 8 / Adoptium OpenJDK ${jvm}" \
      org.opencontainers.image.description="Simplicite server / Almalinux 8 / Adoptium OpenJDK ${jvm}" \
      org.opencontainers.image.vendor="Simplicite Software" \
      org.opencontainers.image.licenses="NONE" \
      org.opencontainers.image.created="${date}"

ENV JAVA_HOME=/usr/local/jvm
ADD jdk-${jvm} /usr/local/jvm

# JPDA, JaCoCo
EXPOSE 8000 8001
